{
  "name": "cloud-orchestrator",
  "version": "1.0.0",
  "description": "Cloud-hosted Multi-AI Orchestration System with PostgreSQL persistence",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/db/migrate.js && node src/server.js",
